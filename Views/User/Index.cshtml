@model IEnumerable<DatabaseDropdown.Models.User>

    <a asp-action="Create" asp-controller="User" class="btn btn-success">Create</a>


    <table class="table table-bordered">
        <tr>
            <th>Id</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Country</th>
            <th>State</th>
            <th>City</th>
        </tr>
        @foreach (var list in Model)
        {
    <tr>
        <td>@list.Id</td>
        <td>@list.FirstName</td>
        <td>@list.LastName</td>
        <td>@list.Country</td>
        <td>@list.State</td>
        <td>@list.City</td>
        <td>
            
            <a asp-action="Delete" asp-controller="User" class="btn btn-danger" asp-route-id="@list.Id" onclick="return confirm('Are you sure to delete this record')">Delete</a>

        </td>


    </tr>
        }
    </table>
